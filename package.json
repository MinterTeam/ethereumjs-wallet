{
  "name": "minter-js-wallet",
  "version": "2.0.0",
  "description": "Utilities for handling Minter keys",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "coverage": "cross-env NODE_ENV=test nyc --reporter=text --cache mocha ./test/*.js",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "standard",
    "prepublishOnly": "npm run lint && npm run test:build",
    "test": "nyc --reporter=html --reporter=text mocha ./test/*.js",
    "test:build": "npm run build:dist && mocha ./dist/test/*.js",
    "build:dist": "babel *.js test/*.js -d dist/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MinterTeam/minter-js-wallet.git"
  },
  "keywords": [
    "minter",
    "wallets",
    "keys"
  ],
  "author": "MinterTeam (https://github.com/MinterTeam)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MinterTeam/minter-js-wallet/issues"
  },
  "dependencies": {
    "bip39": "^2.5.0",
    "bs58check": "^2.1.1",
    "ethereumjs-util": "^5.1.4",
    "hdkey": "^1.0.0",
    "safe-buffer": "^5.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.0",
    "nyc": "^12.0.2",
    "standard": "^11.0.1"
  },
  "standard": {
    "globals": [
      "describe",
      "it"
    ],
    "ignore": [
      "dist/**"
    ]
  }
}
